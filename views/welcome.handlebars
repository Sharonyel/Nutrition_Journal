<section class="hero is-info ">
  <div class="hero-body">
    <div class="container">
      <h1 class="title" id="welcome" style="color: white">
        Welcome
      </h1>
      <h2 class="subtitle user-name" data-name="">
      </h2>
    </div>
  </div>
  <div class="tabs is-boxed is-centered main-menu" id="nav">
    <ul>
      <li data-target="pane-1" id="1" class="is-active">
        <a>
          <span class="icon is-small"><i class="fas fa-user-circle" aria-hidden="true"></i></span>
          <span class="tabText">Profile</span>
        </a>
      </li>
      <li data-target="pane-2" id="2" class="">
        <a>
          <span class="icon is-small"><i class="fas fa-apple-alt" aria-hidden="true"></i></span>
          <span class="tabText">Food</span>
        </a>
      </li>
      <li data-target="pane-3" id="3" class="">
        <a>
          <span class="icon is-small"><i class="fas fa-walking" aria-hidden="true"></i></span>
          <span class="tabText">Excercise</span>
        </a>
      </li>
      <li data-target="pane-4" id="4" class="">
        <a>
          <span class="icon is-small"><i class="fas fa-info-circle" aria-hidden="true"></i></span>
          <span class="tabText">Logs</span>
        </a>
      </li>
    </ul>
  </div>
  <div class="tab-content">
    <div class="tab-pane" id="pane-1" style="display: block;">
      <div class="card large">
        <div class="card-content">
          <div class="columns">
            <div class="column">
              <p>
                <h1 class="profile"><strong>Profile</strong></h1>
                <ul id="full-name"></ul>
                <ul id="age">Age: </ul>
                <ul id="height">Height: </ul>
                <ul id="weight">Weight: </ul>
              </p>
            </div>
            <div class="column">

              <h2 id="nutFact"><strong>Nutrition Quote</strong></h2>

              <div id="quoteContainer">
                <p id="quoteGenius"></p>
              </div>
              <!-- <p class="control">
                  <a class="button is-info is-medium is-centered" id="quoteButton">OK</a>
                  </a>
                </p> -->

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="tab-pane" id="pane-3" style="display: none;">
    <div class="card large">
      <div class="card-content">
        <div class="columns">
          <div class="column">

            <h1 id="exerciseTitle">Enter your workout details!</h1>
            <br>
            <div class="field is-grouped is-grouped is-grouped-multiline">
              <p class="control is-expanded">
                <input class="input is-large" id="time" placeholder="Enter workout time in minutes">
              </p>

              <p class="control is-expanded is-grouped is-grouped-multiline">
                <input class="input is-large" id="workout" placeholder="Enter workout">
              </p>
              <p class="control">
                <a class="button is-info is-large" id="workoutButton">
                  Search
                </a>
              </p>
            </div>
            <br>
            <br>
            <div class="exerciseInfo hidden">
              <p id="date"></p>
              <p id="workoutLength"></p>
              <p id="workoutInfo"></p>
              <p id="calories"></p>
              <br>

              <a class="button is-info is-large is-centered" id="exerciseLog">
                Log today's workout
              </a>



              </div>
              <div class="exerciseSubmit hidden is-centered">
                <p>Your exercise has been logged.</p>
              </div>


            </div>
            <div class="exerciseSubmit hidden is-centered">
              <p>Great Job! Your exercised has been submitted.</p>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>


  <div class="tab-pane is-active " id="pane-2" style="display: none;">
    <div class="card large">
      <div class="card-content">

        <div class="columns">
          <div class="column">
            <h1 id="foodSearch">Search our database of foods</h1>
            <br>
            <div class="field is-grouped is-grouped-multiline">
              <p class="control">
                <input class="input is-large" id="input" type="text" value="" placeholder="Search Food">
              </p>
              <p class="control">
                <a class="button is-info is-large" id="foodButton">
                  Search
                </a>
              </p>
            </div>
          </div>
        </div>
        <br>
        <div class="foodSrchInfo hidden">
          <div class="columns">
            <div class="column" id="img1">

            </div>
            <div class="column">
              <p></p>
              <span>Name: </span><span id="name"></span>
              <p></p>
              <span>Calories: </span><span id="calories1"></span>
              <p></p>
              <span>Quantity: </span><span id="quantity"></span>
              <p class="control">
                <a class="button is-info is-large" id="logButton">
                  Log
                </a>
              </p>
              <div><img id='img2' height='140px' width='200px' src=''></div>
            </div>

          </div>

        </div>
        <div class="foodSubmit hidden is-centered">
          <p>Great Job! Your food has been submitted.</p>
        </div>

      </div>
      <div><img id='img2' height='140px' width='200px' src=''></div>
    </div>
  </div>

  </div>

  <div class="tab-pane is-active" id="pane-4" style="display: none;">
    <div class="card large">
      <div class="card-content">
        <div>
          <h1>Your Information</h1>
        </div>

        <br>
        <br>
        <div class="columns">
          <div class="column">
            Date
            <ul id="exercises">
              {{#each this.exercise}}
             <li>{{date}}</li>
              {{/each}}
            </ul>
          </div>
          <div class="column">
            Exercise
             <ul id="exercises">
              {{#each this.exercise}}
              <li>{{exercise_name}}</li>
              {{/each}}
            </ul>
          </div>
          <div class="column">
            Duration
             <ul id="exercises">
              {{#each this.exercise}}
              <li>{{duration}}</li>
              {{/each}}
            </ul>
          </div>

          <div class="column">
            Calories Burned
             <ul id="exercises">
              {{#each this.exercise}}
              <li>{{calories_burned}}</li>
              {{/each}}
            </ul>
          </div>
        </div>



        <br>
        <ul id="foods">
          {{#each this.food}}
          {{date}}
          {{food_name}}
          {{servings}}
          {{calories}}
          {{/each}}
        </ul>


      </div>
    </div>
  </div>
  </div>

  </div>
  <footer class="footer hero-foot">
    <div class="content has-text-centered">
      <p>
        <strong style="color: #4d6a1b;"> Â© 2020 Thomas Argent, Matt Dominick, Alexander Garcia, Sharon Yelverton 
        </strong>

      </p>
    </div>
  </footer>

</section>
